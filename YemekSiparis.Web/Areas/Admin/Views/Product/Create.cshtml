@using YemekSiparis.Core.Entities;
@using YemekSiparis.BLL.Models.DTOs;
@model ProductCreateDTO


<div class="card shadow-lg border-0 rounded-lg mt-5 w-75 m-auto">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Ürün Ekleme Ekranı</h3></div>
    <div class="card-body">
        <form href="/Admin/Product/Create" enctype="multipart/form-data" method="post">
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="form-floating mb-3 mb-md-0">
                        <input class="form-control" id="inputFirstName" type="text" asp-for="Name" placeholder="Ürün ismi" />
                        <label asp-for="Name">Ürün İsmi</label>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input class="form-control" id="inputLastName" type="text" asp-for="Price" placeholder="Enter your last name" />
                        <label asp-for="Price">Ürün Fiyatı</label>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input class="form-control" id="inputLastName" type="text" asp-for="Discount" placeholder="Enter your last name" />
                        <label asp-for="Discount">İndirim Oranı %</label>
                    </div>
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <input asp-for="Image" type="file" name="Image" class="form-control" accept="image/" />
                </div>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" id="inputEmail" type="text" asp-for="Description" placeholder="name@example.com" />
                <label asp-for="Description">Detay</label>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="row mb-8">
                <div class="col-md-6">
                    <label asp-for="CategoryID">Sağlık Kategorileri</label>
                    <div class="form-floating mb-3 mb-md-0">
                        <div class="row">
                            @for (int i = 0; i < Model.Diets.Count; i++)
                            {
                                <div class="col-md-3">
                                    <input class="diet-checkbox" type="checkbox" asp-for="Diets[i].IsChecked" /> @Model.Diets[i].Name
                                    <input class="diet-checkbox" type="hidden" asp-for="Diets[i].Id" />
                                    <input class="diet-checkbox" type="hidden" asp-for="Diets[i].Name" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating mb-3 mb-md-0">
                        <input class="form-control" id="inputPassword" type="text" asp-for="PrepTime" placeholder="Create a password" />
                        <label asp-for="PrepTime">Hazırlama Zamanı dk.</label>
                    </div>
                    <span asp-validation-for="PrepTime" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <div class="form-floating mb-3 mb-md-0">
                        <select class="form-control" id="inputPasswordConfirm" asp-for="CategoryID" placeholder="Confirm password">
                            @foreach (Category item in ViewBag.Categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                        <label asp-for="CategoryID">Kategori</label>
                    </div>
                </div>
            </div>
            <div class="mt-4 mb-0">
                <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Ekle</button></div>
            </div>
        </form>
    </div>
</div>


