@model LoginVM
@{
	Layout = null;
}

<!DOCTYPE html>
<html>

<!-- Head -->
<head>

	<title>Boost Burger - Giriş Sayfası</title>

	<!-- Meta-Tags -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="keywords" content="">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- //Meta-Tags -->

	<link href="~/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

	<!-- Style -->
	<link rel="stylesheet" href="~/register/css/style.css" type="text/css" media="all">

	<!-- Fonts -->
	<link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
	<!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

	<h1>BOOST BURGER </h1>

	<div class="w3layoutscontaineragileits">
		<h2>GİRİŞ YAP</h2>
		<form method="post">
			<input type="text" asp-for="UserName" placeholder="Kullanıcı Adınız" required="">
			<input type="password" asp-for="Password" placeholder="Şifreniz" required="">

			<div class="text-white" asp-validation-summary="ModelOnly"></div>
			<br />
			<br />
			
			


			<ul class="agileinfotickwthree">
				<li>
					<input asp-for="RememberMe" type="checkbox" id="brand1" name="RememberMe">
					<label asp-for="RememberMe" for="brand1"><span></span>Beni Hatırla</label>
					

					<a href="/Register/Index/">Bir Hesabınız Yok mu?</a>
					<a class="text-white" href="/ChangePassword/ForgetPassword/">Şifremi Unuttum</a>
				</li>
			</ul>
			<div class="aitssendbuttonw3ls">
				<input type="submit" value="Giriş Yap">
				<br />
				
				<p> Ana Sayfaya Dön <span>→</span> <a class="btn btn-success" asp-action="Index" asp-controller="Home" > Boost Burger </a></p>
				<div class="clear"></div>			
				
			</div>
			
		</form>
	</div>


	<div class="w3footeragile">
		<p> &copy; @DateTime.Now.Year Boost Burger. Tüm Hakları Saklıdır </p>
	</div>


	<script type="text/javascript" src="~/register/js/jquery-2.1.4.min.js"></script>

	<!-- pop-up-box-js-file -->
	<script src="~/register/js/jquery.magnific-popup.js" type="text/javascript"></script>
	<!--//pop-up-box-js-file -->
	<script>
		$(document).ready(function () {
			$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
				type: 'inline',
				fixedContentPos: false,
				fixedBgPos: true,
				overflowY: 'auto',
				closeBtnInside: true,
				preloader: false,
				midClick: true,
				removalDelay: 300,
				mainClass: 'my-mfp-zoom-in'
			});

		});
	</script>

</body>
<!-- //Body -->



</html>
