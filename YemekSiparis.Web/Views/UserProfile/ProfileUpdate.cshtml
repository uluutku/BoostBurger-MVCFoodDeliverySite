@model YemekSiparis.Core.Entities.Customer
@using YemekSiparis.Core.Enums

@{
    ViewData["Title"] = "Profil Güncelleme";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Montserrat', serif;
    }

    h1 {
        color: #d9534f;
        font-size: 2.5em;
    }

    .form-label {
        color: #d9534f;
        font-size: 1.2em;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 15px;
        transition: border-color 0.3s;
        font-size: 1em;
    }

        .form-control:focus {
            border-color: #d9534f;
            box-shadow: 0 0 10px rgba(217, 83, 79, 0.5);
        }

    .btn-primary {
        background-color: #d9534f;
        border: none;
        border-radius: 8px;
        padding: 12px 20px;
        font-size: 1.2em;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        color: #fff;
        background-color: #5bc0de;
        border: none;
        border-radius: 8px;
        padding: 12px 20px;
        font-size: 1.2em;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #46b8da;
        }

    #toast {
        display: none;
        position: fixed;
        top: 70px;
        right: 20px;
        background-color: #5cb85c;
        color: #fff;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: opacity 0.5s;
        font-size: 1.2em;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <form asp-action="ProfileUpdate" class="needs-validation" novalidate onsubmit="return handleSubmit(event)">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                    <input asp-for="Name" class="form-control" required />
                    <div class="invalid-feedback">
                        Lütfen adınızı ve soyadınızı giriniz.
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Yaş</label>
                    <input asp-for="Age" class="form-control" required />
                    <div class="invalid-feedback">
                        Lütfen yaşınızı giriniz.
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Birthdate" class="form-label">Doğum Tarihi</label>
                    <input asp-for="Birthdate" type="date" class="form-control" required />
                    <div class="invalid-feedback">
                        Lütfen doğum tarihinizi giriniz.
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label">Cinsiyet</label>
                    <select asp-for="Gender" class="form-select" required>
                        @foreach (var item in Enum.GetValues(typeof(Gender)))
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <div class="invalid-feedback">
                        Lütfen cinsiyetinizi seçiniz.
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Adres</label>
                    <input asp-for="Address" class="form-control" required />
                    <div class="invalid-feedback">
                        Lütfen adresinizi giriniz.
                    </div>
                </div>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <br />
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="toast" class="toast align-items-center">
    <div class="toast-body">
        Profil başarıyla güncellendi!
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

@section scripts {
    <script>
        function showToast() {
            var toast = document.getElementById('toast');
            toast.style.display = 'flex';
            setTimeout(function () {
                toast.style.display = 'none';
            }, 3000);
        }


    </script>
}
